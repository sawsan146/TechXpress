@model List<TechXpress.Web.ViewModel.CategoryViewModel>

@{
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";

}

<div class="container mt-5">

    <div class="card shadow-sm">
        <div class="card-header" style="background-color: darkred; color: white;">
            <h4 class="mb-0">Categories</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead style="background-color: #ef5350; color: white;">
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Is Selected</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                @if (category.IsSelected)
                                {
                                    <span class="badge" style="background-color: #28a745;">Yes</span>
                                }
                                else
                                {
                                    <span class="badge" style="background-color: #dc3545;">No</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("EditCategory", "Admin", new { id = category.Id })" class="btn btn-sm" style="background-color: #ef5350; color: white;" title="Edit">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                                <a href="@Url.Action("DeleteCategory", "Admin", new { id = category.Id })" class="btn btn-sm" style="background-color: #ef5350; color: white;" title="Delete">
                                    <i class="fa fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Adding the necessary styles for a clean and professional look *@
<style>
    .card-header {
        font-size: 1.5em;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .btn {
        padding: 5px 10px;
        font-size: 0.9em;
    }

    .fa-edit, .fa-trash {
        font-size: 1.1em;
    }

    .badge {
        font-size: 1em;
        padding: 5px 10px;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f1f1f1;
    }

    .table-hover tbody tr:hover {
        background-color: #f8d7da;
    }
</style>

@* Adding Font Awesome for icons *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
