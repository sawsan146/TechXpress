@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}
@model LoginViewModel
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        background: #f9f9f9;
    }

    .techxpress-login-container {
        display: flex;
        min-height: 80vh;
        font-family: 'Arial', sans-serif;
    }

    .login-image {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
    }

        .login-image img {
            max-width: 100%;
            max-height: 80vh;
            object-fit: contain;
            border-radius: 1rem;
        }

    .login-form-container {
        flex: 1;
        background-color: #fff;
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        padding: 60px 40px;
        max-width: 500px;
        margin: auto;
    }

        .login-form-container h2 {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 10px;
            text-align: center;
            color: #000;
        }

    .login-subtitle {
        color: #666;
        font-size: 16px;
        margin-bottom: 30px;
        text-align: center;
    }

    .input-group {
        position: relative;
        margin-bottom: 25px;
    }

        .input-group input {
            width: 100%;
            padding: 14px 15px 14px 40px;
            border-radius: 0.5rem;
            border: 1px solid #ccc;
            font-size: 15px;
            background-color: #fff;
        }

        .input-group label {
            position: absolute;
            top: -10px;
            left: 45px;
            background: #fff;
            padding: 0 5px;
            font-size: 15px;
            color: #666;
            pointer-events: none;
        }

    .form-icon {
        position: absolute;
        top: 50%;
        left: 15px;
        transform: translateY(-50%);
        color: #aaa;
    }

    .toggle-password {
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translateY(-50%);
        cursor: pointer;
        color: #aaa;
    }

    .login-btn {
        background-color: #111;
        color: white;
        padding: 12px;
        border-radius: 0.5rem;
        border: none;
        width: 100%;
        font-weight: 600;
        transition: 0.3s;
    }

        .login-btn:hover {
            background-color: #000;
        }

    .forgot-password, .switch-link {
        text-align: center;
        margin-top: 15px;
    }

        .forgot-password a,
        .switch-link a {
            color: #666;
            text-decoration: none;
        }

    .switch-link {
        margin-top: 10px;
    }

    @@media (max-width: 768px) {
        .techxpress-login-container

    {
        flex-direction: column;
    }

    .login-image {
        display: none;
    }

    .login-form-container {
        padding: 40px 20px;
        width: 100%;
        border-radius: 0;
        box-shadow: none;
    }

    }
</style>

<div class="techxpress-login-container">
    <div class="login-image">
        <img src="/images/Login/Side Image.png" alt="TechXpress Login" class="img-fluid">
    </div>

    <div class="login-form-container">
        <h2>Welcome Back</h2>
        <p class="login-subtitle">Log in to access your account</p>

        <form method="post" asp-controller="Register" asp-action="Login" class="login-form">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div><br>
            <div class="input-group">
                <i class="fa fa-envelope form-icon"></i>
                <input asp-for="EmailOrPhone" />
                <label for="EmailOrPhone">Email or Phone Number</label>
                <span asp-validation-for="EmailOrPhone" class="text-danger"></span>
            </div>

            <div class="input-group">
                <i class="fa fa-lock form-icon"></i>
                <input asp-for="Password" id="password" />
                <i class="fa fa-eye toggle-password" onclick="togglePasswordVisibility(this)"></i>
                <label for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="login-btn">Log In</button>

            <p class="forgot-password">
                <a href="#">Forgot Password?</a>
            </p>

          

               @{ @if (ViewBag.ShowRegisterLink == true)
                {
                    <div class="alert alert-warning mt-3 text-center">
                        User not found. <a href="/Register/Register" class="text-danger">Register here</a>.
                    </div>
                }
                else
                {
                      <p class="switch-link">
                     Don’t have an account?
                   <a href="/Register/Register">Sign up</a>
                    </p>

                }
                }
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function togglePasswordVisibility(icon) {
            const passwordInput = document.getElementById('password');
            const isPassword = passwordInput.type === 'password';
            passwordInput.type = isPassword ? 'text' : 'password';
            icon.classList.toggle('fa-eye');
            icon.classList.toggle('fa-eye-slash');
        }
    </script>
}
