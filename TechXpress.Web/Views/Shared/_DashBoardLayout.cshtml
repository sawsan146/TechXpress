@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var userName = User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ?? "Guest";
    var userEmail = User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "user@example.com";
    var activePage = ViewData["ActivePage"]?.ToString();
}

<div class="min-h-screen bg-gray-100 flex flex-col md:flex-row">
    <!-- Sidebar -->
    <div class="w-64 min-h-screen bg-white shadow-lg flex flex-col">
        <div class="p-4 border-b flex items-center justify-between">
            <h1 class="text-xl font-bold text-blue-700">AdminDash</h1>
        </div>
        <div class="p-4 border-b">
            <div class="flex items-center">
                <img class="h-10 w-10 rounded-full" src="https://github.com/shadcn.png" alt="User" />
                <div class="ml-3">
                    <p class="text-sm font-medium">@userName</p>
                    <p class="text-xs text-gray-500">@userEmail</p>
                </div>
            </div>
        </div>
        <nav class="flex-1 overflow-y-auto p-4">
            <ul class="space-y-1">
                <li>
                    <a href="@Url.Action("Index", "Admin")" class="block p-2 rounded-md @(activePage == "Dashboard" ? "bg-blue-100 text-blue-700" : "hover:bg-gray-100 text-gray-600")">
                        Dashboard
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Order")" class="block p-2 rounded-md @(activePage == "Order" ? "bg-blue-100 text-blue-700" : "hover:bg-gray-100 text-gray-600")">
                        Orders
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ProductDashBoard", "Product")" class="block p-2 rounded-md @(activePage == "Product" ? "bg-blue-100 text-blue-700" : "hover:bg-gray-100 text-gray-600")">
                        Products
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "User")" class="block p-2 rounded-md @(activePage == "User" ? "bg-blue-100 text-blue-700" : "hover:bg-gray-100 text-gray-600")">
                        Users
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Reports")" class="block p-2 rounded-md @(activePage == "Reports" ? "bg-blue-100 text-blue-700" : "hover:bg-gray-100 text-gray-600")">
                        Reports
                    </a>
                </li>
                @* <li>
                    <a href="@Url.Action("Index", "Analytics")" class="block p-2 rounded-md @(activePage == "Analytics" ? "bg-blue-100 text-blue-700" : "hover:bg-gray-100 text-gray-600")">
                        Analytics
                    </a>
                </li> *@
                <li>
                    <a href="@Url.Action("Index", "Settings")" class="block p-2 rounded-md @(activePage == "Settings" ? "bg-blue-100 text-blue-700" : "hover:bg-gray-100 text-gray-600")">
                        Settings
                    </a>
                </li>
            </ul>
        </nav>
        <div class="p-4 border-t">
            <a asp-controller="Register" asp-action="Logout" class="flex items-center text-gray-600 hover:text-red-600 transition-colors">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M17 16l4-4m0 0l-4-4m4 4H7" />
                </svg>
                Log Out
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 overflow-auto">
        <main class="p-4 md:p-6">
            @RenderBody()
        </main>
    </div>
</div>
@RenderSection("Scripts", required: false)
