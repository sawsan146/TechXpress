<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css?nonce=1745451675819" rel="stylesheet">

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css?nonce=1745451675819">

<!-- Animate.css -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css?nonce=1745451675819">

<style>
    /* Custom Styles */
    .hero-carousel {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .carousel-item {
        transition: transform 1s ease-in-out;
    }

    .carousel-caption {
        background: rgba(0, 0, 0, 0.6);
        padding: 20px;
        border-radius: 10px;
        bottom: 20%;
    }

    .carousel-control-prev, .carousel-control-next {
        width: 5%;
    }

    .btn-carousel {
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

        .btn-carousel:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }

    /* Responsive adjustments */
     @@media (max-width: 768px) {
        .carousel-caption

    {
        bottom: 10%;
        padding: 10px; 
    }

    .carousel-caption h2 {
        font-size: 1.5rem;
    }

    .carousel-caption p {
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .btn-carousel {
        padding: 8px 15px;
        font-size: 0.8rem;
    }

    }
</style>
<div class="container mt-4 mb-5">
    <!-- Hero Carousel -->
    <div id="mainCarousel" class="carousel slide hero-carousel" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class=""></button>
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1" class="active" aria-current="true"></button>
            <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2" class=""></button>
        </div>

        <div class="carousel-inner">
            <!-- Slide 1 -->
            <div class="carousel-item">
                <img src="~/images/slider/slider1.png" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Latest Tech Products">
                <div class="carousel-caption d-none d-md-block text-start">
                    <h2 class="display-5 fw-bold">Latest Tech Products</h2>
                    <p class="lead">Discover the newest innovations in technology with TechXpress.</p>
                    <a class="btn btn-success btn-carousel" asp-controller="Product" asp-action="Index">Shop Now <i class="bi bi-arrow-right ms-2"></i></a>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="carousel-item active">
                <img src="~/images/slider/slider2.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Exclusive Discounts">
                <div class="carousel-caption d-none d-md-block text-center animate__animated animate__fadeInUp">
                    <h2 class="display-5 fw-bold">Exclusive Discounts</h2>
                    <p class="lead">Enjoy the best offers and deals for a limited time only.</p>
                    <a class="btn btn-success btn-carousel" href="#">View Details <i class="bi bi-tag ms-2"></i></a>
                </div>
            </div>

            <!-- Slide 3 -->
            <div class="carousel-item">
                <img src="~/images/slider/slider3.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Fast Delivery">
                <div class="carousel-caption d-none d-md-block text-end">
                    <h2 class="display-5 fw-bold">Fast &amp; Secure Delivery</h2>
                    <p class="lead">Get your orders delivered quickly and safely right to your door.</p>
                    <a class="btn btn-success text-dark btn-carousel" asp-controller="About" asp-action="Index">Learn More <i class="bi bi-truck ms-2"></i></a>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        var myCarousel = document.getElementById('mainCarousel');
        var carousel = new bootstrap.Carousel(myCarousel, {
            interval: 2000,
            pause: 'hover'
        });

        myCarousel.addEventListener('slide.bs.carousel', function () {
            var captions = document.querySelectorAll('.carousel-caption');
            captions.forEach(function(caption) {
                caption.classList.remove('animate__animated', 'animate__fadeInLeft', 'animate__fadeInUp', 'animate__fadeInRight');
            });
        });

        myCarousel.addEventListener('slid.bs.carousel', function () {
            var activeCaption = document.querySelector('.carousel-item.active .carousel-caption');
            if (activeCaption.parentElement.querySelector('.text-start')) {
                activeCaption.classList.add('animate__animated', 'animate__fadeInLeft');
            } else if (activeCaption.parentElement.querySelector('.text-end')) {
                activeCaption.classList.add('animate__animated', 'animate__fadeInRight');
            } else {
                activeCaption.classList.add('animate__animated', 'animate__fadeInUp');
            }
        });
    });

</script>

