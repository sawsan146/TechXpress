@model ShoppingCartViewModel

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />

<style>
    .cart-item {
        border-bottom: 1px solid #e0e0e0;
        padding-bottom: 20px;
        margin-bottom: 20px;
        transition: background-color 0.3s ease;
    }

        .cart-item:hover {
            background-color: #f8f9fa;
        }

    .product-img {
        max-width: 100px;
        object-fit: cover;
        border-radius: 8px;
    }

    .cart-summary {
        border: 1px solid #e0e0e0;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
    }

        .cart-summary .total-price {
            font-size: 1.5rem;
            font-weight: bold;
        }

    .btn-checkout {
        background-color: #0d6efd;
        color: white;
    }

        .btn-checkout:hover {
            background-color: #0b5ed7;
        }

    .empty-cart {
        min-height: 300px;
    }
</style>

<div class="container py-5">
    <div class="row">
        <!-- Shopping Cart Items -->
        <div class="col-lg-8">
            <h3 class="mb-4">
                <i class="fas fa-shopping-cart me-2"></i> Your Shopping Cart
            </h3>

            @if (Model.ShoppingCartList.Any())
            {
                @foreach (var item in Model.ShoppingCartList)
                {
                    <div class="cart-item d-flex justify-content-between align-items-center">
                        <div class="d-flex">
                            <img src="~/images/product/@item.Product.Image" alt="@item.Product.Name" class="product-img me-3" />
                            <div>
                                <h5>@item.Product.Name</h5>
                                <p class="text-muted small mb-1">@Html.Raw(item.Product.Description)</p>
                                <div class="d-flex align-items-center mt-2">
                                    <form method="post" asp-action="Minus" asp-controller="Cart" asp-route-cartId="@item.Cart_Item_ID">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary me-2">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </form>

                                    <input type="text" value="@item.Quantity" class="form-control form-control-sm text-center me-2" style="width: 50px;" readonly />

                                    <form method="post" asp-action="Plus" asp-controller="Cart" asp-route-cartId="@item.Cart_Item_ID">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex flex-column align-items-end">
                            <span class="fw-bold">@((item.Product.Price * item.Quantity).ToString("C"))</span>
                            <form method="post" asp-action="Remove" asp-route-cartId="@item.Cart_Item_ID" class="mt-2">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i> Remove
                                </button>
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-cart text-center py-5">
                    <i class="fas fa-shopping-cart fa-4x text-muted mb-4"></i>
                    <h4 class="text-muted">Your cart is empty</h4>
                    <p class="text-muted">You haven't added any items yet</p>
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index"
                       class="btn btn-primary mt-3">
                        <i class="fas fa-store me-2"></i> Browse Products
                    </a>
                </div>
            }
        </div>

        <!-- Cart Summary -->
        <div class="col-lg-4 mt-4 mt-lg-0">
            @if (Model.ShoppingCartList.Any())
            {
                <div class="cart-summary">
                    <h4 class="mb-4">Cart Summary</h4>
                    <ul class="list-unstyled mb-4">
                        <li class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>@Model.OrderTotal.ToString("C")</span>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>Free</span>
                        </li>
                        <li class="d-flex justify-content-between border-top pt-3">
                            <span class="total-price">Total:</span>
                            <span class="total-price text-primary">@Model.OrderTotal.ToString("C")</span>
                        </li>
                    </ul>

                    <a asp-controller="Order" asp-action="OrderSummary"
                       class="btn btn-checkout w-100 py-2">
                        <i class="fas fa-credit-card me-2"></i> Proceed to Checkout
                    </a>
                </div>
            }
        </div>
    </div>
</div>
