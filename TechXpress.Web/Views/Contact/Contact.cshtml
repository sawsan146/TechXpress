@model ContactMessageViewModel

@{
    ViewData["Title"] = "Contact";
    Layout = "_Layout";
}

<div class="container mx-auto px-4 py-10">
    <!-- Breadcrumb -->
    <div class="text-gray-500 mb-6">
        <a asp-controller="Home" asp-action="Index" class="hover:underline text-gray-500">Home</a>
        / <span class="text-black font-semibold">Contact</span>
    </div>

    <!-- Success Message -->
    @if (ViewBag.Confirmation != null)
    {
        <div class="mb-4 p-4 bg-green-100 text-green-800 rounded shadow">
            @ViewBag.Confirmation
        </div>
    }

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Contact Info -->
        <div class="bg-white p-6 shadow rounded-xl space-y-6">
            <!-- Call To Us -->
            <div class="flex items-start space-x-4">
                <div class="bg-red-500 text-white p-3 rounded-full">
                    <!-- Phone Icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.2 3.6a1 1 0 01-.217 1.09l-2.063 2.062a11.037 11.037 0 005.657 5.657l2.063-2.063a1 1 0 011.09-.217l3.6 1.2a1 1 0 01.684.948V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                </div>
                <div>
                    <h3 class="font-bold text-lg">Call To Us</h3>
                    <p class="text-sm mt-1">We are available 24/7, 7 days a week.</p>
                    <p class="text-sm text-gray-700 mt-1">Phone: +8801611112222</p>
                </div>
            </div>

            <hr>

            <!-- Write To Us -->
            <div class="flex items-start space-x-4">
                <div class="bg-red-500 text-white p-3 rounded-full">
                    <!-- Mail Icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
                <div>
                    <h3 class="font-bold text-lg">Write To US</h3>
                    <p class="text-sm mt-1">Fill out our form and we will contact you within 24 hours.</p>
                    <p class="text-sm text-gray-700 mt-1">Emails: customer@exclusive.com</p>
                    <p class="text-sm text-gray-700">Emails: support@exclusive.com</p>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="md:col-span-2 bg-white p-6 shadow rounded-xl">
            <form asp-action="Contact" asp-controller="Contact" method="post">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <input asp-for="@Model.Name" placeholder="Your Name *" class="p-3 bg-gray-100 rounded w-full" required />
                    <input asp-for="@Model.Email" placeholder="Your Email *" class="p-3 bg-gray-100 rounded w-full" required />
                    <input asp-for="@Model.Phone" placeholder="Your Phone *" class="p-3 bg-gray-100 rounded w-full" required />
                </div>
                <textarea asp-for="@Model.Message" rows="5" placeholder="Your Message" class="w-full p-3 bg-gray-100 rounded resize-none" required></textarea>
                <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded">
                    Send Message
                </button>
            </form>
        </div>
    </div>
</div>
